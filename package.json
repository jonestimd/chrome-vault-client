{
    "name": "chrome-vault-client",
    "version": "1.0.0-alpha",
    "description": "Chrome extension to store passwords in a Hashicorp Vault",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/jonestimd/chrome-vault-client.git"
    },
    "scripts": {
        "build:dev": "npm run build -- --config webpack-dev.config.js",
        "build": "rm -fr build; mkdir -p build && webpack -p",
        "postbuild": "cp -r src/views/* src/images/ build && rm build/styles.js",
        "package:chrome": "cp src/manifest.chrome.json build/manifest.json && google-chrome --pack-extension=build && mv build.crx vault-client.crx && mv build.pem vault-client.pem",
        "package:firefox": "cp src/manifest.firefox.json build/manifest.json && cd build && zip -r -FS ../vault-client.zip *",
        "package": "npm run build && npm run package:chrome && npm run package:firefox",
        "presign": "npm run build && cp src/manifest.firefox.json build/manifest.json",
        "sign": "node -r dotenv/config node_modules/.bin/web-ext sign -s build -i chrome*.js",
        "pretest": "eslint src",
        "test": "jest",
        "test:watch": "jest --watch src"
    },
    "jest": {
        "preset": "ts-jest/presets/js-with-ts",
        "roots": [
            "<rootDir>/src"
        ],
        "setupFiles": [
            "<rootDir>/src/test/setup.ts"
        ],
        "clearMocks": true,
        "collectCoverage": true,
        "coverageDirectory": "coverage",
        "coverageProvider": "v8",
        "testEnvironment": "node"
    },
    "devDependencies": {
        "@types/chrome": "^0.0.126",
        "@types/cookiejar": "^2.1.2",
        "@types/firefox-webext-browser": "^82.0.0",
        "@types/jsdom": "^12.2.3",
        "@types/lodash": "^4.14.132",
        "@types/node": "^13.0.0",
        "@typescript-eslint/eslint-plugin": "^4.6.0",
        "@typescript-eslint/parser": "^4.6.0",
        "autoprefixer": "^9.5.0",
        "css-loader": "^2.1.1",
        "dotenv": "^8.2.0",
        "eslint": "^7.12.1",
        "extract-loader": "^3.1.0",
        "file-loader": "^3.0.1",
        "jest": "^26.6.1",
        "jsdom": "^15.0.0",
        "lodash": "^4.17.11",
        "material-components-web": "^1.1.0",
        "node-sass": "^4.11.0",
        "postcss-loader": "^3.0.0",
        "sass-loader": "^7.1.0",
        "superagent": "^5.0.2",
        "ts-jest": "^26.4.3",
        "ts-loader": "^6.0.0",
        "ts-node": "^8.1.0",
        "typescript": "^4.0.5",
        "webpack": "^4.29.6",
        "webpack-cli": "^3.3.0",
        "web-ext": "^5.4.0"
    }
}
