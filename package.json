{
    "name": "chrome-vault-client",
    "version": "1.0.0-alpha",
    "description": "Chrome extension to store passwords in a Hashicorp Vault",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/jonestimd/chrome-vault-client.git"
    },
    "scripts": {
        "prebuild": "rm -r build; mkdir -p build; webpack -p",
        "build": "cp -r src/manifest.json src/views/* src/images/ build",
        "postbuild": "rm build/styles.js",
        "test": "_mocha src/test/**/*.test.js"
    },
    "mocha": {
        "require": "src/test/babel-register",
        "ui": "exports",
        "file": "src/test/setup.js",
        "recursive": true
    },
    "devDependencies": {
        "@babel/cli": "^7.4.3",
        "@babel/core": "^7.4.3",
        "@babel/preset-env": "^7.4.3",
        "@babel/register": "^7.4.0",
        "autoprefixer": "^9.5.0",
        "babel-loader": "^8.0.0",
        "chai": "^4.2.0",
        "css-loader": "^2.1.1",
        "extract-loader": "^3.1.0",
        "file-loader": "^3.0.1",
        "jsdom": "^15.0.0",
        "material-components-web": "^1.1.0",
        "mocha": "^6.1.3",
        "node-sass": "^4.11.0",
        "postcss-loader": "^3.0.0",
        "proxyquire": "^2.1.0",
        "sass-loader": "^7.1.0",
        "sinon": "^7.3.1",
        "sinon-chai": "^3.3.0",
        "superagent": "^5.0.2",
        "webpack": "^4.29.6",
        "webpack-cli": "^3.3.0"
    }
}
