{
    "name": "chrome-vault-client",
    "version": "1.0.0-alpha",
    "description": "Chrome extension to store passwords in a Hashicorp Vault",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/jonestimd/chrome-vault-client.git"
    },
    "scripts": {
        "build:dev": "npm run build -- --config webpack-dev.config.js",
        "build": "rm -fr build; mkdir -p build && webpack -p",
        "postbuild": "cp -r src/manifest.json src/views/* src/images/ build && rm build/styles.js",
        "test": "_mocha src/test/**/**/*.test.ts",
        "test:watch": "_mocha --watch src/test/**/**/*.test.ts"
    },
    "mocha": {
        "require": "ts-node/register",
        "ui": "exports",
        "file": "src/test/setup.js",
        "recursive": true
    },
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/chrome": "^0.0.126",
        "@types/jsdom": "^12.2.3",
        "@types/lodash": "^4.14.132",
        "@types/mocha": "^5.2.6",
        "@types/node": "^13.0.0",
        "@types/proxyquire": "^1.3.28",
        "@types/sinon": "^7.0.11",
        "@types/sinon-chai": "^3.2.2",
        "autoprefixer": "^9.5.0",
        "chai": "^4.2.0",
        "css-loader": "^2.1.1",
        "extract-loader": "^3.1.0",
        "file-loader": "^3.0.1",
        "jsdom": "^15.0.0",
        "lodash": "^4.17.11",
        "material-components-web": "^1.1.0",
        "mocha": "^6.1.3",
        "node-sass": "^4.11.0",
        "postcss-loader": "^3.0.0",
        "proxyquire": "^2.1.0",
        "sass-loader": "^7.1.0",
        "sinon": "^7.3.1",
        "sinon-chai": "^3.3.0",
        "superagent": "^5.0.2",
        "ts-loader": "^6.0.0",
        "ts-node": "^8.1.0",
        "typescript": "^4.0.3",
        "webpack": "^4.29.6",
        "webpack-cli": "^3.3.0"
    }
}
